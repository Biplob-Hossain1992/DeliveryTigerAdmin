    ViewBag.Title = "New Merchant Follow Up Report";
}

<script src="https://code.angularjs.org/1.2.14/angular.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
    $(document).ready(function () {

        flatpickr(".flatpickr", {
            enableTime: false,
            allowInput: true,
            maxDate: "today"
        });
    });
</script>

<style>
    .modal {
        overflow-y: auto;
    }
</style>

<div ng-app="RetentionPerformanceMonitoringReportModule">
    <div ng-controller="RetentionPerformanceMonitoringReportCtrl">
        <div class="row">
            <div class="col-lg-12">
                <div class="spiner-example" ng-show="showLoader">
                    <div class="sk-spinner sk-spinner-wave">
                        <div class="sk-rect1"></div>
                        <div class="sk-rect2"></div>
                        <div class="sk-rect3"></div>
                        <div class="sk-rect4"></div>
                        <div class="sk-rect5"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <div class="form-group">
                            <h4 style="text-align:center;">Retention Performance Monitoring Report</h4>
                        </div>
                        <div class="form-group">
                            <div class="form-inline">
                                <input style="margin-right: 2px;" type="text" class="form-control-sm form-control" ng-model="mainSearch" placeholder="search" />
                                <div class="input-daterange input-group">
                                    <input type="text" style="border: 1px solid #46b8da; margin-right: 2px;" ng-model="fromDate" id="fromDate" name="fromDate" class="btn flatpickr" placeholder="From Date" autocomplete="off" />
                                </div>
                                <div class="input-daterange input-group">
                                    <label class="form-control-sm">Back:</label>
                                    <select style="border: 1px solid #46b8da" class="btn btn-default" ng-model="backDays" ng-options="back.id as back.name for back in backDaysList"></select>
                                </div>
                                <div class="input-daterange input-group">
                                    <label class="form-control-sm">Advance:</label>
                                    <select style="border: 1px solid #46b8da" class="btn btn-default" ng-model="advanceDays" ng-options="advance.id as advance.name for advance in advanceDaysList"></select>
                                </div>
                                <button type="button" style="margin-right: 2px;" class="btn btn-w-m btn-success" ng-click="merchantFollowUpReport(fromDate,backDays,advanceDays)">Show</button>
                            </div>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-bordered table-responsive">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>
                                                <a href="#" ng-click="orderByField='FullName'; reverseSort = !reverseSort">
                                                    SR Name
                                                </a>
                                            </th>
                                            <th>
                                                <a href="#" ng-click="orderByField='MerchantCalled'; reverseSort = !reverseSort">
                                                    Called Merchant
                                                </a>
                                            </th>
                                            <th>
                                                <a href="#" ng-click="orderByField='MerchantVisited'; reverseSort = !reverseSort">
                                                    Visited Merchant
                                                </a>
                                            </th>
                                            <th colspan="2" style="text-align: center;">
                                                <a href="#" ng-click="orderByField='OrderData'; reverseSort = !reverseSort">
                                                    Regular
                                                </a>
                                            </th>
                                            <th>
                                                <a href="#" ng-click="orderByField='OrderDatanot'; reverseSort = !reverseSort">
                                                    Today Order(Not Placed Order in Back {{backDays}} Days)
                                                </a>
                                            </th>
                                            <th>
                                                <a href="#" ng-click="orderByField='OrderDatanot'; reverseSort = !reverseSort">
                                                    Advance Order(Plced Order in Advance {{advanceDays}} Days)
                                                </a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="o in merchantFollowUpData | orderBy:orderByField:reverseSort | filter: mainSearch">
                                            <td>{{$index+1}}</td>
                                            <td>{{o.FullName}}</td>
                                            <td>
                                                <span ng-if="o.MerchantCalled > 0" style="cursor: pointer;" ng-click="calledMerchantDetails('1',fromDate,o.RetentionUserId)" data-toggle="modal" data-target="#calledMerchantDetailsModal">
                                                    {{o.MerchantCalled}}
                                                    <i class="fa fa-hand-o-left"></i>
                                                </span>
                                                <span ng-if="o.MerchantCalled == 0">
                                                    {{o.MerchantCalled}}
                                                </span>
                                            </td>
                                            <td>
                                                <span ng-if="o.MerchantVisited > 0" style="cursor: pointer;" ng-click="visitedMerchantDetails('2',fromDate,o.RetentionUserId)" data-toggle="modal" data-target="#visitedMerchantDetailsModal">
                                                    {{o.MerchantVisited}}
                                                    <i class="fa fa-hand-o-left"></i>
                                                </span>
                                                <span ng-if="o.MerchantVisited == 0">
                                                    {{o.MerchantVisited}}
                                                </span>
                                            </td>
                                            <td>
                                                <span ng-if="o.OrderData > 0" style="cursor: pointer;" ng-click="regularMerchantDetails('3',fromDate,o.RetentionUserId)" data-toggle="modal" data-target="#regularMerchantDetailsModal">
                                                    {{o.OrderData}}
                                                    <i class="fa fa-hand-o-left"></i>
                                                </span>
                                                <span ng-if="o.OrderData == 0">
                                                    {{o.OrderData}}
                                                </span>
                                            </td>
                                            <td>
                                                <span style="margin-left: 2px;" class="btn btn-info" ng-click="monthWiseOrderedMerchantDetails(o.RetentionUserId, fromDate)" data-toggle="modal" data-target="#monthWiseMerchantDetailsModal">
                                                    Month
                                                    <i class="fa fa-info-circle"></i>
                                                </span>
                                            </td>
                                            <td>
                                                <span ng-if="o.OrderDatanot > 0" style="cursor: pointer;" ng-click="todayOrderMerchantDetails('4',fromDate,o.RetentionUserId,backDays)" data-toggle="modal" data-target="#todayOrderMerchantDetailsModal">
                                                    {{o.OrderDatanot}}
                                                    <i class="fa fa-hand-o-left"></i>
                                                </span>
                                                <span ng-if="o.OrderDatanot == 0">
