                    </select>
                </div>
                <button class="btn btn-info" type="button" id="deliveryChargeListLoadBtn" onclick="loadDeliveryChargeList()">Search</button>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
