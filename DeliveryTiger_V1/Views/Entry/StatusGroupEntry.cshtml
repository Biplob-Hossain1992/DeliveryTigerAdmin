
@{
    ViewBag.Title = "StatusGroupEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Entry/StatusEntry.js"></script>
<script src="~/Scripts/plugins/dataTables/dataTables.bootstrap4.min.js"></script>
<script src="~/Scripts/plugins/dataTables/datatables.min.js"></script>
<link href="~/Content/plugins/dataTable/datatables.min.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        if (sessionStorage.getItem("userId") !== null && sessionStorage.getItem("userId") !== "undefined") {
            $("#UserHidden").val(sessionStorage.getItem("userId"));
            var title = "@ViewBag.Title";
            $("#title").html(title.replace(/([A-Z])/g, ' $1').trim());
        }
        else {
            window.location.href = "/Account/Login";
        }
    });
</script>
<style>
    .col-form-label {
        font-weight: bold;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2 id="title"></h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Admin")">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
@*Status Group Entry*@
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Courier Status Group <small>Insert Delivery Tiger Status Groups</small></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" style="padding:5px;">
                <div style="display:flex;margin-top:10px;">
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label class="col-lg-5 col-form-label">Report: </label>
                            <div class="col-lg-7">
                                <input type="text" id="reportGroup" class="form-control" placeholder=" Ex: Confirmed" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label class="col-lg-5 col-form-label">Fulfillment: </label>
                            <div class="col-lg-7">
                                <input type="text" id="fulfillmentGroup" class="form-control" placeholder=" Ex: Packaged" />
                            </div>
                        </div>
                    </div>
                </div>
                <div style="display:flex;margin-top:10px;">
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label class="col-lg-5 col-form-label">Order Tracking: </label>
                            <div class="col-lg-7">
                                <input type="text" id="orderTrackingGroup" class="form-control" placeholder=" Ex: Shipping" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label class="col-lg-5 col-form-label">Public Order Tracking: </label>
                            <div class="col-lg-7">
                                <input type="text" id="publicOrderTrackingGroup" class="form-control" placeholder=" Ex: Delivered" />
                            </div>
                        </div>
                    </div>
                </div>
                <div style="display:flex;margin-top:10px;">
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label class="col-lg-5 col-form-label">Dashboard: </label>
                            <div class="col-lg-7">
                                <input type="text" id="dashboardStatusGroup" class="form-control" placeholder=" Ex: Shipped" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row" style="justify-content: center">
                    <button type="button" id="addNewStatusGroupBtn" class="btn btn-success" style="margin: 10px;" onclick="addNewStatusGroup()"><strong>Add Status Group</strong></button>
                </div>
            </div>
        </div>
    </div>
</div>
@*Status Group Update*@
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Courier Status Group List <small>Load All Delivery Tiger Status Group List</small></h5>
                <button class="btn btn-info offset-3" type="button" onclick="loadAllStatusGroupList()">Load</button>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" style="padding:5px;">
                <div class="table-responsive" style="padding: 0px;" id="statusGroupListDetails">
                </div>
            </div>
        </div>
    </div>
</div>