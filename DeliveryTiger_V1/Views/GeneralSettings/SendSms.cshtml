
@{
    ViewBag.Title = "SendSms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        if (sessionStorage.getItem("userId") !== null && sessionStorage.getItem("userId") !== "undefined") {
            $("#UserHidden").val(sessionStorage.getItem("userId"));
            var title = "@ViewBag.Title";
            $("#title").html(title.replace(/([A-Z])/g, ' $1').trim());
        }
        else {
            window.location.href = "/Account/Login";
        }
    });
</script>

<script src="~/Scripts/GeneralSettings/generalSettings.js"></script>
<style>
    .col-form-label {
        font-weight: bold;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2 id="title"></h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Admin")">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<input id="UserHidden" type="hidden" value="" />
<div class="row" style="margin-top:10px;">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Send SMS </h5>     
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="col-lg-12" style="width:75%;margin:auto;">
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label">Number(s): </label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" id="smsNumber" placeholder="eg: 01XXXXXXXXX,01XXXXXXXXX"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label">SMS Text: </label>
                        <div class="col-lg-8">
                            <textarea class="form-control" id="smsText" placeholder="Input SMS text here..." style="height:60px;"></textarea>
                        </div>
                    </div>
                    <div class="form-group row" style="justify-content: center">
                        <button id="save" class="btn btn-success" onclick="SendSms()" type="button">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

